<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClientFragment">

    <Button
        android:id="@+id/client_next_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="24dp"
        android:text="Next Page"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/client_audioRecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="20dp"
        android:text="Audio Record"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="@+id/client_next_page"
        app:layout_constraintTop_toBottomOf="@+id/client_next_page" />

    <Button
        android:id="@+id/client_audioTrack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:text="Audio Track"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="@+id/client_next_page"
        app:layout_constraintTop_toBottomOf="@+id/client_next_page" />

</androidx.constraintlayout.widget.ConstraintLayout>